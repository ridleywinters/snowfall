{
    // Subjectively, this gives the "expected" result more often when duplicating
    // a file or folder.
    "explorer.incrementalNaming": "smart",

    "editor.formatOnSave": true,

    "editor.codeActionsOnSave": {
        // While this feature is nice in theory, it has a tendency to
        // rename aliased import paths that defeats the intent of having
        // introduced the alias in the first place.
        "source.organizeImports": "never"
    },

    // Subjective: while cool looking, I've never found the minimap useful
    "editor.minimap.enabled": false,

    // In general, disable inlay hints unless the user explicitly requests them
    "editor.inlayHints.enabled": "offUnlessPressed",

    // Subjective: the underline highlight on mutable variables is very distracting
    // and rarely provide useful information.
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            "*.mutable": {
                "underline": false
            }
        }
    },

    // Deno-related
    "deno.enable": true,

    // Prefer aliased imports over relative paths to modules
    "typescript.preferences.importModuleSpecifier": "shortest",
    "javascript.preferences.importModuleSpecifier": "shortest",

    // Disable the rust-analyzer features that clutter the editor experience
    "rust-analyzer.lens.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": true,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "never",
    "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "never",
    "rust-analyzer.inlayHints.reborrowHints.enable": "never",

    // Chat settings
    "chat.tools.autoApprove": true,
    "chat.agent.maxRequests": 1000,
    "github.copilot.chat.codeGeneration.model": "claude-sonnet-4.5",
    "github.copilot.chat.model": "claude-sonnet-4.5",

    // Make the adornments smaller and the editor the focus
    "window.zoomLevel": 0.75,
    "editor.fontSize": 15,

    // Formatter configuration
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80,
        "editor.indentSize": 4
    },
    "[typescript]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[javascript]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[json]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },

    //
    // Color customizations
    //

    "workbench.colorCustomizations": {
        "editor.background": "#131212",
        "editorLineNumber.foreground": "#29283c",
        "editorLineNumber.activeForeground": "#8b4b4b",

        "editorBracketHighlight.foreground1": "#a6605b",
        "editorBracketHighlight.foreground2": "#7a214a",
        "editorBracketHighlight.foreground3": "#8e5c5f",
        "editorBracketHighlight.foreground4": "#7c1123",
        "editorBracketHighlight.foreground5": "#765863",
        "editorBracketHighlight.foreground6": "#3260b5"
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "string",
                "settings": {
                    "foreground": "#eab257"
                }
            },
            {
                "scope": "constant.numeric",
                "settings": {
                    "foreground": "#a20f60"
                }
            },
            {
                "scope": "keyword",
                "settings": {
                    "foreground": "#7b8fa4"
                }
            },
            {
                "scope": "keyword.control",
                "settings": {
                    "foreground": "#a0a8b1"
                }
            },
            {
                "scope": "variable",
                "settings": {
                    "foreground": "#25b3eb"
                }
            },
            {
                "scope": "entity.name.function,",
                "settings": {
                    "foreground": "#22b1ac"
                }
            },
            {
                "scope": "entity.name.type",
                "settings": {
                    "foreground": "#3b84c4"
                }
            },
            {
                "scope": "support.type, support.class",
                "settings": {
                    "foreground": "#d82baa"
                }
            },
            {
                "scope": "support.type.property-name",
                "settings": {
                    "foreground": "#4db6d0"
                }
            },
            {
                "scope": "comment",
                "settings": {
                    "foreground": "#976d6d"
                }
            },
            {
                "scope": "keyword.operator",
                "settings": {
                    "foreground": "#6d8e74"
                }
            },
            {
                "scope": "meta.attribute.rust",
                "settings": {
                    "foreground": "#6d5d77"
                }
            }
        ]
    }
}
