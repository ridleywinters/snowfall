{
    "imports": {
        "@/": "./src/",
        "@std/path": "jsr:@std/path@1.0.8",
        "@std/fs": "jsr:@std/fs@1.0.19",
        "@std/cli": "jsr:@std/cli@1.0.6",
        "@std/fmt": "jsr:@std/fmt@1.0.3",
        "@raiment-core": "../raiment-core/mod.ts"
    },
    "compilerOptions": {
        "strict": true,
        "lib": [
            "deno.window",
            "esnext"
        ]
    },
    "fmt": {
        "useTabs": false,
        "indentWidth": 4,
        "lineWidth": 100
    },
    "lint": {
        "rules": {
            "tags": [
                "recommended"
            ],
            "exclude": [
                "require-await",
                "require-yield",
                "no-explicit-any",
                "no-unused-vars"
            ]
        }
    }
}
